Dark neon footer with company info, social icons, and copyright
{% endcomment %}

<footer class="ecliptech-footer">
  <div class="footer-container container">
    <div class="footer-about">
      <h3 class="gradient-text">{{ section.settings.title }}</h3>
      <p>{{ section.settings.description }}</p>
    </div>

    <div class="footer-contact">
      <p><strong>Phone:</strong> {{ section.settings.phone }}</p>
      <p><strong>Email:</strong> <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a></p>
      <p><strong>Address:</strong> {{ section.settings.address }}</p>
    </div>

    <div class="footer-social">
      {% if section.settings.facebook != blank %}
        <a href="{{ section.settings.facebook }}" target="_blank" class="social-link">Facebook</a>
      {% endif %}
      {% if section.settings.instagram != blank %}
        <a href="{{ section.settings.instagram }}" target="_blank" class="social-link">Instagram</a>
      {% endif %}
      {% if section.settings.tiktok != blank %}
        <a href="{{ section.settings.tiktok }}" target="_blank" class="social-link">TikTok</a>
      {% endif %}
    </div>
  </div>

  <div class="footer-bottom">
    <p>¬© {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
  </div>
</footer>

<style>
.ecliptech-footer {
  background: linear-gradient(to bottom, #0a0a0a, #000);
  padding: 3rem 1rem;
  color: #ccc;
  border-top: 1px solid rgba(34,211,238,0.2);
  position: relative;
  overflow: hidden;
}
.ecliptech-footer::before {
  content: "";
  position: absolute;
  top: -20%;
  left: -10%;
  width: 60%;
  height: 60%;
  background: radial-gradient(circle, rgba(147,51,234,0.3), transparent 70%);
  filter: blur(100px);
}
.footer-container {
  display: grid;
  gap: 2rem;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  text-align: left;
  position: relative;
  z-index: 2;
}
.footer-about h3 {
  font-family: 'Orbitron', sans-serif;
  font-size: 1.6rem;
  margin-bottom: 0.5rem;
}
.footer-about p {
  color: #aaa;
  line-height: 1.6;
}
.footer-contact p {
  margin: 0.3rem 0;
}
.footer-contact a {
  color: #22d3ee;
  text-decoration: none;
}
.footer-contact a:hover {
  text-decoration: underline;
}
.footer-social {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}
.social-link {
  color: #22d3ee;
  font-weight: 500;
  transition: all 0.3s;
}
.social-link:hover {
  color: #9333ea;
  text-shadow: 0 0 10px #9333ea;
}
.footer-bottom {
  text-align: center;
  margin-top: 2rem;
  font-size: 0.9rem;
  color: #666;
  border-top: 1px solid rgba(34,211,238,0.1);
  padding-top: 1rem;
}
</style>

{% schema %}
{
  "name": "Ecliptech Footer",
  "settings": [
    { "type": "text", "id": "title", "label": "Footer Title", "default": "Ecliptech Hub" },
    { "type": "textarea", "id": "description", "label": "Description", "default": "Innovating the future with digital and electronic excellence." },
    { "type": "text", "id": "phone", "label": "Phone Number", "default": "+6011-1581 0899" },
    { "type": "text", "id": "email", "label": "Email", "default": "support@ecliptech.my" },
    { "type": "text", "id": "address", "label": "Address", "default": "Kuala Lumpur, Malaysia" },
    { "type": "url", "id": "facebook", "label": "Facebook URL" },
    { "type": "url", "id": "instagram", "label": "Instagram URL" },
    { "type": "url", "id": "tiktok", "label": "TikTok URL" }
  ],
  "presets": [{ "name": "Ecliptech Footer" }]
}
{% endschema %}
