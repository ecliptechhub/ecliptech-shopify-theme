{% endcomment %}

<section class="ecliptech-hot-sellers container">
  <div class="hot-header">
    <h2 class="gradient-text">{{ section.settings.title }}</h2>
    <p class="subtitle">{{ section.settings.subtitle }}</p>
  </div>

  <div class="hot-grid">
    {% if section.settings.collection != blank %}
      {% for product in collections[section.settings.collection].products %}
        <div class="hot-card">
          <a href="{{ product.url }}" class="hot-link">
            <div class="hot-image">
              <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title }}">
            </div>
            <h3>{{ product.title }}</h3>
            <p class="price">{{ product.price | money }}</p>
          </a>
        </div>
      {% endfor %}
    {% else %}
      <p>No collection selected. Choose one in the section settings.</p>
    {% endif %}
  </div>
</section>

<style>
.ecliptech-hot-sellers {
  text-align: center;
  padding: 5rem 1rem;
}
.hot-header h2 {
  font-family: 'Orbitron', sans-serif;
  font-size: 2.5rem;
  margin-bottom: 1rem;
}
.hot-header .subtitle {
  color: #aaa;
  font-size: 1.1rem;
  margin-bottom: 3rem;
}
.hot-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 2rem;
}
.hot-card {
  background: rgba(255,255,255,0.05);
  border-radius: 1rem;
  padding: 1.5rem;
  transition: all 0.3s ease;
  box-shadow: 0 0 20px rgba(34,211,238,0.1);
}
.hot-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 0 30px rgba(34,211,238,0.4);
}
.hot-image img {
  border-radius: 0.5rem;
  margin-bottom: 1rem;
}
.hot-card h3 {
  font-size: 1.1rem;
  color: #fff;
  margin-bottom: 0.5rem;
}
.price {
  color: #22d3ee;
  font-weight: 600;
}
</style>

{% schema %}
{
  "name": "Ecliptech Hot Sellers",
  "settings": [
    { "type": "text", "id": "title", "label": "Section Title", "default": "Hot Sellers" },
    { "type": "text", "id": "subtitle", "label": "Section Subtitle", "default": "Our most popular tech gear" },
    { "type": "collection", "id": "collection", "label": "Select Collection" }
  ],
  "presets": [{ "name": "Ecliptech Hot Sellers" }]
}
{% endschema %}
