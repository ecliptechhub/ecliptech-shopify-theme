Highlight key features or services in glowing neon cards
{% endcomment %}

<section class="ecliptech-features container">
  <div class="features-header">
    <h2 class="gradient-text">{{ section.settings.title }}</h2>
    <p class="subtitle">{{ section.settings.subtitle }}</p>
  </div>

  <div class="features-grid">
    {% for block in section.blocks %}
      <div class="feature-card">
        {% if block.settings.icon != blank %}
          <img src="{{ block.settings.icon | image_url: width: 80 }}" alt="Feature Icon" class="feature-icon">
        {% endif %}
        <h3>{{ block.settings.heading }}</h3>
        <p>{{ block.settings.text }}</p>
      </div>
    {% endfor %}
  </div>
</section>

<style>
.ecliptech-features {
  text-align: center;
  padding: 5rem 1rem;
}
.features-header h2 {
  font-family: 'Orbitron', sans-serif;
  font-size: 2.5rem;
  margin-bottom: 1rem;
}
.features-header .subtitle {
  color: #aaa;
  font-size: 1.1rem;
  margin-bottom: 3rem;
}
.features-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
}
.feature-card {
  background: rgba(255,255,255,0.05);
  border: 1px solid rgba(34,211,238,0.2);
  border-radius: 1rem;
  padding: 2rem;
  transition: all 0.3s ease;
  box-shadow: 0 0 20px rgba(147,51,234,0.2);
}
.feature-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 0 30px rgba(147,51,234,0.5);
}
.feature-icon {
  margin: 0 auto 1rem;
  width: 60px;
  filter: drop-shadow(0 0 8px #22d3ee);
}
.feature-card h3 {
  color: #22d3ee;
  font-size: 1.3rem;
  margin-bottom: 0.5rem;
}
.feature-card p {
  color: #ccc;
  font-size: 1rem;
}
</style>

{% schema %}
{
  "name": "Ecliptech Features",
  "settings": [
    { "type": "text", "id": "title", "label": "Section Title", "default": "Why Choose Ecliptech?" },
    { "type": "text", "id": "subtitle", "label": "Section Subtitle", "default": "Powerful features designed to elevate your experience." }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        { "type": "image_picker", "id": "icon", "label": "Feature Icon" },
        { "type": "text", "id": "heading", "label": "Feature Heading", "default": "Fast & Secure" },
        { "type": "text", "id": "text", "label": "Feature Description", "default": "Optimized for speed, built for security." }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [{ "name": "Ecliptech Features Grid" }]
}
{% endschema %}
