{% comment %}
‚≠ê Ecliptech Hero Section
Dark Neon Hero Banner with editable subtitle, buttons, and image
{% endcomment %}

<section class="hero-ecliptech">
  <div class="hero-glow-purple"></div>
  <div class="hero-glow-cyan"></div>

  <div class="hero-content container">
    <div class="hero-text">
      <h1 class="hero-title gradient-text">{{ section.settings.title }}</h1>
      <p class="hero-subtitle">{{ section.settings.subtitle }}</p>

      <div class="hero-buttons">
        {% if section.settings.primary_button_label != blank %}
          <a href="{{ section.settings.primary_button_link }}" class="btn-neon">
            {{ section.settings.primary_button_label }}
          </a>
        {% endif %}
        {% if section.settings.secondary_button_label != blank %}
          <a href="{{ section.settings.secondary_button_link }}" class="btn-outline">
            {{ section.settings.secondary_button_label }}
          </a>
        {% endif %}
      </div>
    </div>

    {% if section.settings.hero_image != blank %}
      <div class="hero-image">
        <img src="{{ section.settings.hero_image | image_url: width: 900 }}" alt="Hero Image">
      </div>
    {% endif %}
  </div>
</section>

