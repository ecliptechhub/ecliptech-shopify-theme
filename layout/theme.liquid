<!doctype html>
<html lang="{{ request.locale }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>{{ page_title }} - {{ shop.name }}</title>

    {{ content_for_header }}

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;600;700&family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

    <!-- Theme Styles -->
    <link rel="stylesheet" href="{{ 'ecliptech-theme.css' | asset_url }}">
  </head>

  <body>
    <header>
      {% section 'header' %}
    </header>

    <main role="main">
      {{ content_for_layout }}
    </main>

    <footer>
      {% section 'ecliptech-footer' %}
    </footer>

    <script src="{{ 'theme.js' | asset_url }}" defer></script>
  </body>
</html>
